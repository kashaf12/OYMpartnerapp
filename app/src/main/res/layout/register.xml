<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/accent"
    android:padding="16dp"
    >
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ph_profile_image"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:src="@drawable/blank_profile_picture_973460_960_720"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/ph_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Kashaf Ahmed"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/iron"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email :"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/ph_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="kashafaahmed@gmail.com"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/iron"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone :"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/ph_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+918229104558"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location :"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/ph_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Sultanpur"
                    android:inputType="text"
                    android:textColorHint="@color/iron"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience :"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/ph_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="5 yrs"
                    android:inputType="number"
                    android:textColorHint="@color/iron"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating :"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/ph_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="5/5"
                    android:inputType="number"
                    android:textColorHint="@color/iron"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speciality : "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/ph_speciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Wedding and baby shower"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate : "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/ph_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="₹ 50/hr"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of pics : "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/ph_number_of_pics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="50 pics (softcopy)"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extra charge : "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/ph_extra_pics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="₹ 10/pic (Softcopy)"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website :"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/ph_website"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:hint="www.github.com/kashaf12/OYM"
                    android:textColorHint="@color/iron"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description :"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/ph_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Write About yourself here"
                    android:textColorHint="@color/iron"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_below="@+id/us_email"
                android:layout_marginTop="8dp"
                android:background="#447e7e7e" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Your Best Clicks"
                android:layout_gravity="center"
                android:textColor="@color/primary_dark"
                android:layout_margin="8dp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/ph_image_1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/iron"
                        android:src="@drawable/baseline_add_white_24"

                        android:contentDescription="TODO" />


                    <ImageView
                        android:id="@+id/ph_image_2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"

                        android:background="@color/iron"
                        android:src="@drawable/baseline_add_white_24"
                        android:contentDescription="TODO" />

                    <ImageView
                        android:id="@+id/ph_image_3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/iron"
                        android:src="@drawable/baseline_add_white_24"
                        android:contentDescription="TODO" />
                    <ImageView
                        android:id="@+id/ph_image_4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/iron"
                        android:src="@drawable/baseline_add_white_24"
                        android:contentDescription="TODO" />

                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <Button
                    android:id="@+id/ph_register_upload"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:background="@drawable/button"
                    android:layout_height="match_parent"
                    android:text="Register"
                    android:textColor="@color/accent"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>